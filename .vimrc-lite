"python is happiest here
set tabstop=4
set shiftwidth=4
set expandtab
"personal preferences
set hlsearch
set nowrap
set autoindent
set number
set ruler
set history=50
set termencoding=utf-8
"not sure on this one
set bs=2
"locally set helper macros
nmap ,l :set list!
nmap ,p :set noautoindent
nmap ,pp :set autoindent
nmap ,w :set wrap
nmap ,ww :set nowrap
let @h = "yypVr"
"editor improvements
set helplang=en
