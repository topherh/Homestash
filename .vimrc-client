"actually not sure what this does
if &cp | set nocp | endif
let s:cpo_save=&cpo
set cpo&vim
let &cpo=s:cpo_save
unlet s:cpo_save
"plugins need it
filetype plugin on
let b:match_ignorecase = 1
syntax on
"python coding bonus
set tabstop=4
set shiftwidth=4
set hlsearch
set nowrap
set autoindent
set number
set backupdir=~/.vim/backup
set directory=~/.vim/tmp
set backspace=indent,eol,start
set expandtab
"make it more universal
if has('gui_running')
    map <S-Insert> <MiddleMouse>
    " colorscheme pablo
    colorscheme koehler 
    set mouse=a
    " Remove menu bar
    set guioptions-=m
    " Remove toolbar
    set guioptions-=T
else
    " Do nothing
    map! <S-Insert> <MiddleMouse>
    set background=dark
endif
set fileencodings=ucs-bom,utf-8,default,latin1
set helplang=en
set history=50
set nomodeline
set ruler
set runtimepath=~/.vim,/var/lib/vim/addons,/usr/share/vim/vimfiles,/usr/share/vim/vim72,/usr/share/vim/vimfiles/after,/var/lib/vim/addons/after,~/.vim/after
set suffixes=.bak,~,.swp,.o,.info,.aux,.log,.dvi,.bbl,.blg,.brf,.cb,.ind,.idx,.ilg,.inx,.out,.toc
set termencoding=utf-8
set bs=2
" vim: set ft=vim :
set nocompatible
let @h = "yypVr"
nmap gx <Plug>NetrwBrowseX
nnoremap <silent> <Plug>NetrwBrowseX :call netrw#NetrwBrowseX(expand("<cWORD>"),0)
nmap <silent> <C-s> :wa<CR>
nmap <silent> <C-\> :NERDTreeToggle<CR>
nnoremap <silent> <F8> :TlistToggle<CR>
nnoremap <silent> ,n :set number!<CR>
nnoremap <silent> ,l :set list!<CR>
nnoremap <silent> ,w :set wrap!<CR>
nnoremap <silent> ,p :set autoindent!<CR>
nnoremap <silent> ,d :diffthis<CR>
nnoremap <silent> ,D :diffoff<CR>
nnoremap <silent> ,DD :diffoff!<CR>
nnoremap <silent> ,tw :set tw=80<CR>
nnoremap <silent> ,TW :set tw=0<CR>
nnoremap <silent> <C-L> :noh<CR><C-L>
highlight OverLength ctermbg=red ctermfg=white guibg=#592929
match OverLength /\%81v.\+/
"Wiki/Documentation
map <F2> a== <C-R>=strftime("%r")<CR> ==<CR><CR>
map <F3> :VimwikiSearch 
map <F4> :execute "vimgrep /" . expand("<cword>") . "/j **" <Bar> cw<CR>
map <F7> :setlocal spell! spelllang=en_us<CR>
map <leader>wc :Calendar<CR>
map <leader>tt <Plug>VimwikiToggleListItem
map <leader>wg :VimwikiGoto 
let g:netrw_list_hide = '.swp,\.swo,\.svn,\.pyo,\.pyc'
let g:netrw_liststyle = 3
let NERDTreeIgnore = ['\.vim$','\~$','\.sw[op]$','\.svn$','\.py[oc]$']
" function list
function! Browser ()
  let line0 = getline (".")
  let line = matchstr (line0, "http[^ ]*")
  :if line==""
  let line = matchstr (line0, "ftp[^ ]*")
  :endif
  :if line==""
  let line = matchstr (line0, "file[^ ]*")
  :endif
  " echo line
  exec ":silent !firefox ".line
endfunction
map <C-F3> :call Browser ()<CR>

